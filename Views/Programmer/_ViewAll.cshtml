@model IEnumerable<Project_ITHoot.Models.ProgrammerModel>
@using Project_ITHoot.Models

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity)
            </th>
            <th>
                Programmer Actions
            </th>
            <th>
                Project Actions
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Programmer", null, Context.Request.Scheme)','New Programmer')" class="btn btn-success text-white">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Programmer", new { id = item.IdProgrammer }, Context.Request.Scheme)','Update Programmer')" class="btn btn-info text-white">Edit</a>
                    <a onclick="showInPopup('@Url.Action("Details","ProgrammersAndProjects", new { id = item.IdProgrammer }, Context.Request.Scheme)','Programmer')" class="btn btn-warning text-white">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.IdProgrammer" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
                    <td>
                        <a onclick="showInPopup('@Url.Action("Create", "ProgrammersAndProjects", new { id = item.IdProgrammer }, Context.Request.Scheme)','Create PP')" class="btn btn-info text-white">Add to the project</a>
                        <form asp-controller="ProgrammersAndProjects" asp-action="Delete" asp-route-id="@item.IdProgrammer" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                            <input type="submit" value="Delete from project" class="btn btn-danger" />
                        </form>
                    </td>
            </tr>
        }
    </tbody>
</table>
