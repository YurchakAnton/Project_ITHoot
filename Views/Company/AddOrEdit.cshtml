@model Project_ITHoot.Models.CompanyModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameOfCompany" class="control-label"></label>
                <input asp-for="NameOfCompany" class="form-control" />
                <span asp-validation-for="NameOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyLocation" class="control-label"></label>
                <input asp-for="CompanyLocation" class="form-control" />
                <span asp-validation-for="CompanyLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityOfCompany" class="control-label"></label>
                <input asp-for="ActivityOfCompany" class="form-control" />
                <span asp-validation-for="ActivityOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
